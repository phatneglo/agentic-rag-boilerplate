# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_URL=redis://localhost:6379/0

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=true
LOG_LEVEL=INFO
API_VERSION=v1

# Queue Configuration
QUEUE_PREFIX=document_processing
MAX_RETRIES=3
JOB_TIMEOUT=300
QUEUE_CONCURRENCY=5

# External Services Configuration
# Typesense
TYPESENSE_HOST=localhost
TYPESENSE_PORT=8108
TYPESENSE_API_KEY=your_typesense_api_key
TYPESENSE_PROTOCOL=http

# Qdrant
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_API_KEY=your_qdrant_api_key
QDRANT_PROTOCOL=http

# Document Processing
UPLOAD_DIR=./uploads
PROCESSED_DIR=./processed
MAX_FILE_SIZE=50MB
ALLOWED_EXTENSIONS=pdf,docx,txt,md

# Security
SECRET_KEY=your-secret-key-here
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Monitoring and Logging
ENABLE_METRICS=true
METRICS_PORT=9090
LOG_FORMAT=json
LOG_FILE=./logs/app.log

# Worker Configuration
WORKER_CONCURRENCY=3
WORKER_TIMEOUT=600
WORKER_RETRY_DELAY=5

# Development
RELOAD=true
WORKERS=1

# Object Storage Configuration
# Supported providers: s3, digitalocean, minio
OBJECT_STORAGE_PROVIDER=s3
OBJECT_STORAGE_BUCKET=your-bucket-name
OBJECT_STORAGE_REGION=us-east-1
OBJECT_STORAGE_ACCESS_KEY=your-access-key
OBJECT_STORAGE_SECRET_KEY=your-secret-key
OBJECT_STORAGE_ENDPOINT_URL=
# For DigitalOcean Spaces: https://nyc3.digitaloceanspaces.com
# For MinIO: http://localhost:9000
OBJECT_STORAGE_PUBLIC_URL=
# Public URL base for accessing files (optional, for CDN or custom domain)

# File Upload Configuration
MAX_FILE_SIZE_MB=100
ALLOWED_FILE_EXTENSIONS=.pdf,.docx,.txt,.md,.html,.jpg,.jpeg,.png,.gif,.csv,.json,.xml
UPLOAD_FOLDER_STRUCTURE=year-month-day
# Options: year-month-day, year-month, year, flat 